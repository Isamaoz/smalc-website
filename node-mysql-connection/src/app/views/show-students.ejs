    <h1>Holi</h1>

    <div class="row">
      <div class="col-md-6 mt-4 text-center">
        <table class="table table-striped table-bordered">
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>News</th>
          </tr>
          <% for (var i = 0; i < studentlist.length; i ++) { %>
            <tr>
              <td><%= studentlist[i].id %></td>
              <td><%= studentlist[i].Nombre %></td>
              <td><%= studentlist[i].Apellidos %></td>
            </tr>
          <% } %>
        </table>
      </div>

      <div class="col-md-6 mt-4 card">
        <form class="card-body" action="/news" method="post">
          <h3 class="card-title">Add News</h3>
          <div class="form-group">
            <input name="title" type="text" class="form-control" placeholder="News Titlte">
          </div>
          <div class="form-group">
            <input name="news" type="text" class="form-control" placeholder="News Content">
          </div>
          <input type="submit" class="btn btn-primary">
        </form>
      </div>
